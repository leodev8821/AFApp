<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titleItemTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Title"
                android:layout_gravity="center"
                android:gravity="center"/>

            <TextView
                android:id="@+id/bodyItemTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Content"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tagsItemTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    tools:text="Tag1, Tag2, Tag3"/>

                <TextView
                    android:id="@+id/userItemTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    tools:text="Created by: "/>

                <TextView
                    android:id="@+id/reactionsItemTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    tools:text= "Reactions: "/>

            </FrameLayout>

            <TextView
                android:id="@+id/dateItemtextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Created at: "/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>